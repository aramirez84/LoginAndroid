<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    
    <TabHost 
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
     	android:layout_height="match_parent">
     	
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
 
         	<TabWidget 
         	    android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs" />
 			<FrameLayout 
 			    android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@android:id/tabcontent" >
 			
 			<LinearLayout
 			    android:id="@+id/Avisos"
 			    android:layout_width="match_parent"
 			    android:layout_height="match_parent"
 			    android:orientation="vertical" >

 			    <TextView
 			        android:id="@+id/textViewAvisos"
 			        android:layout_width="wrap_content"
 			        android:layout_height="wrap_content"
 			        android:text="@string/avisos" />
 			    
 			    <ScrollView
 			        android:id="@+id/scrollView1"
 			        android:layout_width="wrap_content"
 			        android:layout_height="wrap_content" >
 			        

 			        <LinearLayout
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="vertical" >
 			            <ImageView
		 			        android:id="@+id/imageAviso1"
		 			        android:layout_width="fill_parent"
		 			        android:layout_height="120dp"
		 			        android:layout_marginTop="25dp" />
		
		 			    <ImageView
		 			        android:id="@+id/imageAviso2"
		 			        android:layout_width="fill_parent"
		 			        android:layout_height="120dp"
		 			        android:layout_marginTop="25dp"/>
 			            <ImageView
					        android:id="@+id/imageAviso3"
					        android:layout_width="fill_parent"
					        android:layout_height="120dp"
					        android:layout_marginTop="25dp" />
		
					    <ImageView
					        android:id="@+id/imageAviso4"
					        android:layout_width="fill_parent"
					        android:layout_height="120dp"
					        android:layout_marginTop="25dp"/>
		
					    <ImageView
					        android:id="@+id/imageAviso5"
					        android:layout_width="fill_parent"
					        android:layout_height="120dp"
					        android:layout_marginTop="25dp"/>
		
					    <ImageView
					        android:id="@+id/imageAviso6"
					        android:layout_width="fill_parent"
					        android:layout_height="120dp"
					        android:layout_marginTop="25dp" />	    
 			        </LinearLayout>
 			    </ScrollView>

			     			</LinearLayout>
 
            <LinearLayout 
                android:id="@+id/Consejo"
                android:orientation="vertical"
              	android:layout_width="match_parent"
              	android:layout_height="match_parent" >
 					
                <TextView 
                    android:id="@+id/textViewConsejo"
                    android:text="@string/tabConsejoAcademico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ScrollView
 			        android:id="@+id/scrollViewNoticias"
 			        android:layout_width="wrap_content"
 			        android:layout_height="wrap_content" >
 			        
 			        <LinearLayout
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="vertical" >
 			            <TextView
		 			        android:id="@+id/textViewConsejo1"
		 			        android:layout_width="fill_parent"
		 			        android:layout_height="120dp"
		 			        android:layout_marginTop="25dp" />
		
		 			    <TextView
		 			        android:id="@+id/textViewConsejo2"
		 			        android:layout_width="fill_parent"
		 			        android:layout_height="120dp"
		 			        android:layout_marginTop="25dp"/>
		 			    
		 			    <TextView
		 			        android:id="@+id/textViewConsejo3"
		 			        android:layout_width="fill_parent"
		 			        android:layout_height="120dp"
		 			        android:layout_marginTop="25dp"/>
 			            	    
 			        </LinearLayout>
 			    </ScrollView>
                
        	</LinearLayout>
        	
        	<LinearLayout 
                android:id="@+id/Actividades"
                android:orientation="vertical"
              	android:layout_width="match_parent"
              	android:layout_height="match_parent" >
 					
                <TextView 
                    android:id="@+id/textViewActividades"
                    android:text="@string/tabActividades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ScrollView
 			        android:id="@+id/scrollViewAgenda"
 			        android:layout_width="wrap_content"
 			        android:layout_height="wrap_content" >
 			  		
 			        <LinearLayout
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="vertical" >
 			            <ImageView
		 			        android:id="@+id/imageAgenda1"
		 			        android:layout_width="fill_parent"
		 			        android:layout_height="120dp"
		 			        android:layout_marginTop="25dp" />
		
		 			    <ImageView
		 			        android:id="@+id/imageAgenda2"
		 			        android:layout_width="fill_parent"
		 			        android:layout_height="120dp"
		 			        android:layout_marginTop="25dp"/>
 			            <ImageView
					        android:id="@+id/imageAgenda3"
					        android:layout_width="fill_parent"
					        android:layout_height="120dp"
					        android:layout_marginTop="25dp" />
		
					    <ImageView
					        android:id="@+id/imageAgenda4"
					        android:layout_width="fill_parent"
					        android:layout_height="120dp"
					        android:layout_marginTop="25dp"/>
		
					    	    
 			        </LinearLayout>
 			    </ScrollView>
        	</LinearLayout>
        	
        	<LinearLayout 
                android:id="@+id/Divisiones"
                android:orientation="vertical"
              	android:layout_width="match_parent"
              	android:layout_height="match_parent" >
 					
                <TextView 
                    android:id="@+id/textViewDivisiones"
                    android:text="@string/tabDivisiones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ScrollView
 			        android:id="@+id/scrollViewNoticias"
 			        android:layout_width="wrap_content"
 			        android:layout_height="wrap_content" >
 			        

 			        <LinearLayout
 			            android:layout_width="match_parent"
 			            android:layout_height="wrap_content"
 			            android:orientation="vertical" >
 			            <ImageView
		 			        android:id="@+id/imageNoticia1"
		 			        android:layout_width="fill_parent"
		 			        android:layout_height="120dp"
		 			        android:layout_marginTop="25dp" />
		
		 			    <ImageView
		 			        android:id="@+id/imageNoticia2"
		 			        android:layout_width="fill_parent"
		 			        android:layout_height="120dp"
		 			        android:layout_marginTop="25dp"/>
 			            	    
 			        </LinearLayout>
 			    </ScrollView>
        	</LinearLayout>
         </FrameLayout>
    </LinearLayout>
</TabHost>
</LinearLayout>

